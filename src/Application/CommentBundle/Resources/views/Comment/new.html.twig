<form class="fos_comment_comment_form" action="{{ path("fos_comment_comment_create", { "threadIdentifier": thread.identifier }) }}" method="POST">

    {% block fos_comment_form_title %}{% endblock %}

    {% block fos_comment_form_fields %}
        <textarea name="{{ form.body.vars.full_name }}"></textarea>
        {% if form.authorName %}
            <label class="author_name">Post as:
                <input type="text" name="{{ form.authorName.vars.full_name }}" value="{{ comment.authorName }}" />
            </label>
        {% endif %}
    {% endblock %}

    <div class="fos_comment_submit">
        {% block fos_comment_form_submit %}
            <input type="submit" value="Post" />
        {% endblock %}
    </div>

</form>

{% extends "LichessBundle::layoutCommon.twig" %}
{% block assets %}
{% parent %}
{% stylesheet 'bundles/lichess/css/user.css' %}
{% endblock %}
{% block body %}
<div class="header">
    <h1><a class="site_title" href="{% path 'lichess_homepage' %}">Lichess</a></h1>
</div>
<div id="lichess_user">
    {% block content %}{% endblock %}
</div>
{% endblock %}
{% block top_menu %}
<a class="goto_play goto_nav" title="{% trans 'Play a new game' %}" href="{% path "lichess_homepage" %}">Play</a>
<a class="goto_gamelist goto_nav" title="{% trans 'See the games being played in real time' %}" href="{% path "lichess_list_current" %}">Games</a>
<a class="goto_forum goto_nav" title="{% trans 'Talk about chess and discuss lichess features in the forum' %}" href="{% path "forum_index" %}">Forum</a>
{% endblock %}

{% extends "FOSUser::layoutUser.html.twig" %}
{% block content %}
<div class="content_box small_box">
<div class="signup_box">
    <span class="box_right_text">{% trans "Have an account?" %} <a class="toggle_signin">{% trans "Sign in" %}</a></span>
    <h1 class="lichess_title">{% trans "Sign up" %}</h1>
    <p class="explanation">
        {% trans "All you need is a username and a password." %}
    </p>
    <p class="explanation">
        It is <strong>not</strong> required to signup. You can play as <strong>anonymous</strong>.<br />
        Signup if you want to save your played games and have an ELO ranking.
    </p>
    {% form_theme form form.getOption('theme') %}
    <form action="{{ path('fos_user_user_create') }}" method="POST" class="signup">
        <ul>
            <li class="username">
                {{ form_label(form.username) }}
                {{ form_field(form.username) }}
                {{ form_errors(form.username) }}
                {% if form.hasErrors and not form.username.hasErrors and not form.plainPassword.hasErrors %}
                    <ul><li>{% trans "This username is not available" %}</li></ul>
                {% endif %}
            </li>
            <li class="password">
                {{ form_label(form.plainPassword, "Password") }}
                {{ form_field(form.plainPassword) }}
                {{ form_errors(form.plainPassword) }}
            </li>
            <li>
                <input type="submit" class="submit" value="{% trans "Sign up" %}" />
            </li>
        </ul>
        {{ form_hidden(form) }}
    </form>
</div>
</div>
{% endblock %}

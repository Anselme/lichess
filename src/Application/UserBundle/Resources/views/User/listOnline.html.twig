<h2>{% trans "All players " %}</h2>
<ul class="anonymous_users clearfix">
    {% for player in 0..nbPlayers %}<li></li>{% endfor %}
</ul>
<h2>{% trans "Named players " %}</h2>
<ul class="users">
    {% set isAnonymous = fos_user_isAnonymous() %}
    {% for user in users %}
    <li>
        {{ lichess_link_user(user) }}
        {% if not isAnonymous and app.user != user %}
            <a class="send" href="{{ path("ornicar_message_message_new", {"to": user.username}) }}">{% trans "Send a message" %}</a>
        {% endif %}
    </li>
    {% endfor %}
</ul>

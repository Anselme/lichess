<h2>{% trans "All players" %} ({{ nbPlayers}})</h2>
<ul class="anonymous_users clearfix">
    {% for player in 1..nbPlayers %}<li></li>{% endfor %}
</ul>
<h2>{% trans "Named players" %} ({{ users.count }})</h2>
<ul class="users">
    {% set isAuthenticated = is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    {% for user in users %}
    <li>
        {{ lichess_link_user(user) }}
        {% if isAuthenticated and app.user != user %}
            <a class="send" href="{{ path("ornicar_message_message_new", {"to": user.username}) }}">{% trans "Send a message" %}</a>
        {% endif %}
    </li>
    {% endfor %}
</ul>

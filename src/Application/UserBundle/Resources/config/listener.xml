<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lichess_user.core_request_listener.class">Application\UserBundle\CoreRequestListener</parameter>
    </parameters>

    <services>
        <service id="lichess_user.core_request_listener" class="%lichess_user.core_request_listener.class%">
            <argument type="service" id="security.context" />
            <argument type="service" id="lichess_user.online.cache" />
            <tag name="kernel.listener" event="core.request" method="onCoreRequest" priority="-513" />
        </service>
    </services>

</container>

<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ category.name|raw }} - Lichess Forum</title>
    <subtitle>{{ category.description|raw }}</subtitle>
    <id>{{ forum_route_category(category, true)|raw }}</id>
    <link href="{{ forum_route_category(category, true)|raw }}" rel="alternate" />
    <link href="{{ url("forum_index") }}" />
    <updated>{{ category.lastPost.createdAt|date("c")|raw }}</updated>
    {% render "ForumBundle:Topic:list" with {"category": category } %}
</feed>

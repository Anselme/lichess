{% for topic in topics %}
    <entry>
        <title>{{ topic.subject }}</title>
        <author>{{ topic.authorName|default("Anonymous") }}</author>
        <updated>{{ topic.pulledAt|date("c")|raw }}</updated>
        <id>{{ _view.forum.urlForTopic(topic, true)|raw }}</id>
        <link rel="alternate">{{ _view.forum.urlForTopic(topic, true)|raw }}</link>
    </entry>
{% endfor %}

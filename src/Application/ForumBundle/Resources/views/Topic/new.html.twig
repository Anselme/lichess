{% extends "ForumBundle::layout.html.twig" %}
{% block title %}{{ category.name|raw }} - New topic{% endblock %}
{% block content %}
<ol class="crumbs">
    <li><a href="{{ path("forum_index") }}">Forum</a></li>
    <li><a href="{{ forum_route_category(category)|raw }}">{{ category.name|raw }}</a></li>
    <li><h1>New topic</h1></li>
</ol>
<br />
<h1>New topic</h1>
<form action="{{ path("forum_category_topic_create", {"slug": category.slug} ) }}" method="post">
    <label><span class="required">Category</span> {{ form_field(form.category) }}</label>
    <label><span class="required">Subject</span> {{ form_field(form.subject, {"class": "subject"}) }}</label>
    <label><span class="required">Message</span> {{ form_field(form.firstPost.message) }}</label>
    {% if form.firstPost.authorName %}
        <label><span>Author</span> {{ form_field(form.firstPost.authorName, {"class": "authorName"}) }}</label>
    {% endif %}
    <button class="submit button" type="submit">Create the topic</button>
</form>
{% endblock %}

{% extends "LichessBundle:Timeline:entry.twig.html" %}

{% block author %}{% include "LichessBundle:Timeline:author.twig.html" with {"author": post.author|default(post.authorName)} %}{% endblock %}
{% block verb %}posted{% endblock %}
{% block post_verb %}on{% endblock %}
{% block subject_name %}Forum {{ post.topic.subject }}{% endblock %}
{% block subject_url %}{{ forum_urlForPost(post) }}{% endblock %}
{% block view_name %}Post{% endblock %}
{% block view_url %}{{ forum_urlForPost(post) }}{% endblock %}
{% block date %}{{ post.createdAt|date }}{% endblock %}

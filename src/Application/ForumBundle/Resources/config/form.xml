<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="forum.form.post.class">Application\ForumBundle\Form\PostForm</parameter>
    </parameters>

    <services>

        <service id="forum.form.post"
            class="%forum.form.post.class%"
            factory-class="%forum.form.post.class%"
            factory-method="create">
            <!--<argument type="service" id="form.context" />-->
            <argument>%forum.form.post.name%</argument>
            <argument type="collection">
                <argument key="theme">%forum.template.theme%</argument>
                <argument key="post_class">%forum.model.post.class%</argument>
                <argument key="security_context" type="service" id="security.context" />
            </argument>
        </service>

        <service id="forum.form.first_post"
            class="%forum.form.first_post.class%"
            factory-class="%forum.form.first_post.class%"
            factory-method="create">
            <!--<argument type="service" id="form.context" />-->
            <argument>%forum.form.first_post.name%</argument>
            <argument type="collection">
                <argument key="theme">%forum.template.theme%</argument>
                <argument key="post_class">%forum.model.post.class%</argument>
                <argument key="security_context" type="service" id="security.context" />
            </argument>
        </service>

    </services>

</container>

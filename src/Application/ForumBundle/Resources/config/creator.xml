<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="forum.creator.post.class">Application\ForumBundle\Creator\PostCreator</parameter>
    </parameters>

    <services>

        <service id="forum.creator.post" class="%forum.creator.post.class%">
            <argument type="service" id="lichess_forum.timeline.pusher" />
            <argument type="service" id="lichess.object_manager" />
        </service>

    </services>

</container>

{% extends "OrnicarMessage::container.html.twig" %}
{% block content %}
<div class="message_show">
    <div class="head">
        <h1>{{ message.subject|default("No subject") }}</h1>
    </div>
    {% include "OrnicarMessage::sidebar.html.twig" %}
    <div class="center show">
        <span class="actions">
            <a class="delete" href="{{ path('ornicar_message_message_delete', {"id": message.id}) }}">{% trans "Delete" %}</a>
        </span>
        <span class="infos">
            {% if message.from == app.user %}
                You said to {{ lichess_link_user(message.to) }}
            {% else %}
                {{ lichess_link_user(message.from) }} said
            {% endif %}
            {{ lichess_date(message.createdAt) }}:
        </span>
        <div class="body">{{ lichess_user_text(message.body) }}</div>
        {% if form %}
            <div class="answer">
                {% trans "Reply" %}
                <form action="{{ path("ornicar_message_message_create") }}" method="post">
                    {{ form_field(form.to) }}
                    {{ form_field(form.subject) }}
                    <div class="field_body">
                        {{ form_field(form.body) }}
                        {{ form_errors(form.body) }}
                    </div>
                    <div class="actions">
                        <input class="send button" type="submit" value="{% trans "Send" %}" />
                        <a class="cancel" href="{{ path("ornicar_message_message_list") }}">{% trans "Cancel" %}</a>
                    </div>
                </form>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

<div class="message_sent">
    <div class="head">
        <h1>{{ "Sent messages"|trans }}</h1>
    </div>
    {% include 'OrnicarMessageBundle::sidebar.html.twig' %}
    <div class="center list infinitescroll">
        <div class="pager">{{ pagerfanta(messages, 'default', {'proximity': 0}) }}</div>
        {% for message in messages %}
            <div class="message">
                <span class="infos">
                    You sent <a class="user" href="{{ path('fos_user_user_show', {"username": message.to.username}) }}">{{ message.to }}</a>
                    a message {{ message.createdAt|date }}
                </span>
                <a class="subject" href="{{ path('ornicar_message_message_show', {"id": message.id}) }}">{{ message.subject }}</a>
            </div>
        {% else %}
            <div class="no_messages">No messages yet</div>
        {% endfor %}
    </div>
</div>

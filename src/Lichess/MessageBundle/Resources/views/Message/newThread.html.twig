{% extends 'OrnicarMessageBundle::layout.html.twig' %}

{% block content %}

<div class="message_new">
    <h1>{{ "Compose message"|trans }}</h1>
    <div class="center form">
        {{ form_errors(form) }}
        <form action="{{ path('ornicar_message_thread_new') }}" method="post">
            <div class="field_to">
                {{ form_label(form.recipient, 'To:') }}
                {{ form_widget(form.recipient, {"attr": {'class': 'autocomplete', 'data-provider': url('fos_user_autocomplete')}}) }}
                {{ form_errors(form.recipient) }}
            </div>
            <div class="field_subject">
                {{ form_label(form.subject, 'Subject:') }}
                {{ form_widget(form.subject) }}
                {{ form_errors(form.subject) }}
            </div>
            <div class="field_body">
                {{ form_widget(form.body) }}
                {{ form_errors(form.body) }}
            </div>
            <div class="actions">
                <input class="send button" type="submit" value="{{ "Send"|trans }}" />
                <a class="cancel" href="{{ path("ornicar_message_inbox") }}">{{ "Cancel"|trans }}</a>
            </div>
        </form>
    </div>
</div>

{% endblock %}

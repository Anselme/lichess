{% extends "LichessBundle::layout.html.twig" %}

{% block menu_active %}message{% endblock %}

{% block layout_content %}
<div id="lichess_message" class="content_box">{% block content %}{% endblock %}</div>
{% endblock %}

{% block goodies %}
    <div class="sidebar">
        <a href="{{ path("ornicar_message_inbox") }}" class="goto_inbox">{{ "Inbox"|trans }}</a>
        <a href="{{ path("ornicar_message_sent") }}" class="goto_sent">{{ "Sent messages"|trans }}</a>
        <a href="{{ path("ornicar_message_thread_new") }}" class="goto_compose">{{ "Compose message"|trans }}</a>
    </div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets
    '@LichessMessageBundle/Resources/public/css/message.css'
    filter="?yui_css" %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    '@LichessBundle/Resources/public/vendor/jquery.infinitescroll.min.js'
    '@LichessBundle/Resources/public/js/infinitescroll.js'
%}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

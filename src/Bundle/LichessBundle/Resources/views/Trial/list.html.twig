{% extends "LichessBundle:Trial:layoutTrial.html.twig" %}
{% block content %}
<div class="content_box">
<h1 class="title">{% block list_type %}{% endblock %}</h1>
{% block list_menu %}{% endblock %}
<div class="all_games infinitescroll">
    <div class="pager">{{ pagerfanta(trials, 'default', {'proximity': 0}) }}</div>
    <div class="all_games_inner">
    {% block games_inner %}
        {% include "LichessBundle:Trial:listWidget.html.twig" with {"trials": trials} %}
    {% endblock %}
    </div>
</div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    '@LichessBundle/Resources/public/vendor/jquery.infinitescroll.min.js'
    '@LichessBundle/Resources/public/js/infinitescroll.js'
%}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% extends "LichessBundle:Game:layoutGameList.html.twig" %}
{% block content %}
<div class="content_box">
{% set pagination %}{% include "LichessBundle::pagination.html.twig" with {"pager": games.pages, "url": pagerUrl} %}{% endset %}
<h1 class="title">{% block list_type %}{% endblock %} {{ games.pages.firstItemNumber }} - {{ games.pages.lastItemNumber }} of {{ games.pages.totalItemCount }}</h1>
{% block list_menu %}{% endblock %}
<div class="all_games infinitescroll">
    <div class="pager pager_top">{{ pagination|raw }}</div>
    <div class="all_games_inner">
    {% block games_inner %}
        {% include "LichessBundle:Game:listWidget.html.twig" with {"games": games} %}
    {% endblock %}
    </div>
    <div class="pager pager_bottom">{{ pagination|raw }}</div>
</div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    '@LichessBundle/Resources/public/vendor/jquery.infinitescroll.min.js'
    '@LichessBundle/Resources/public/js/infinitescroll.js'
%}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

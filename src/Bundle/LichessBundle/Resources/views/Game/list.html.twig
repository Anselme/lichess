{% extends "LichessBundle:Game:layoutGameList.html.twig" %}
{% block content %}
<div class="content_box no_padding">
<div class="content_box_title">
    <h1 class="title">{% block list_type %}{% endblock %} ({{ games.nbResults }})</h1>
    {% block list_menu %}{% endblock %}
</div>
<div class="all_games infinitescroll">
    <div class="pager">{{ pagerfanta(games, 'default', {'proximity': 0}) }}</div>
    <div class="all_games_inner">
    {% block games_inner %}
        {% include "LichessBundle:Game:listWidget.html.twig" with {"games": games} %}
    {% endblock %}
    </div>
</div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% javascripts
    '@LichessBundle/Resources/public/vendor/jquery.infinitescroll.min.js'
    '@LichessBundle/Resources/public/js/infinitescroll.js'
%}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

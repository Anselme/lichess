{% extends "Lichess:Player:layoutPlayer.html.twig" %}
{% set game = player.game %}
{% block robots %}noindex, nofollow{% endblock %}
{% block title_suffix %} #{{ player.fullId }}{% endblock %}
{% block content %}
<div class="lichess_game clearfix lichess_player_{{ player.color }} not_spectator">
    <div class="lichess_board_wrap">
        {{ lichess_game_board(player, checkSquareKey)|raw }}
    </div>
    <div class="lichess_ground">
        {% include "Lichess:Game:cemetery.html.twig" with {"player": player, "position": "top"} %}
        <div class="lichess_table_wrap">
            {% render "Lichess:Player:table" with {"id": game.id, "color": player.color, "playerFullId": player.fullId} %}
        </div>
        {% include "Lichess:Game:cemetery.html.twig" with {"player": player.opponent, "position": "bottom"} %}
    </div>
</div>
{% endblock %}
{% block goodies %}
    <div class="lichess_goodies">
        <br />
        <a class="lichess_replay_link blank_if_play" href="{{ path("lichess_pgn_viewer", {"id": game.id, "color": player.color} ) }}">{% trans "Replay and analyse" %}</a>
    </div>
{% endblock %}
{% block js_data %}
    {{ lichess_game_data(player, possibleMoves, opponentActivity) }}
{% endblock %}
{% block chat %}
{% if player.opponent.isHuman %}{% include "Lichess:Player:room.html.twig" with {"player": player} %}{% endif %}
{% endblock %}
{% block share %}{% include "Lichess:Game:share.html.twig" with {"game": game} %}{% endblock %}
{% block feed_link %}{% include "LichessComment:Thread:feedLink.html.twig" with {"game": game} %}{% endblock %}

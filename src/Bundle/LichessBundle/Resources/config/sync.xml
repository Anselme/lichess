<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lichess.memory.soft_timeout">15</parameter>
        <parameter key="lichess.memory.hard_timeout">180</parameter>
        <parameter key="lichess.memory.delay">0</parameter>

        <parameter key="lichess.http_push.latency">10</parameter>
        <parameter key="lichess.http_push.delay">0.25</parameter>
    </parameters>

    <services>
        <service id="lichess.memory" class="Bundle\LichessBundle\Sync\Memory">
            <argument>%lichess.memory.soft_timeout%</argument>
            <argument>%lichess.memory.hard_timeout%</argument>
        </service>
        <service id="lichess.http_push" class="Bundle\LichessBundle\Sync\HttpPush">
            <argument type="service" id="lichess.memory" />
            <argument>%lichess.http_push.latency%</argument>
            <argument>%lichess.http_push.delay%</argument>
        </service>
        <service id="lichess.client_updater" class="Bundle\LichessBundle\Sync\ClientUpdater">
            <argument type="service" id="lichess.memory" />
            <argument type="service" id="lichess.renderer.room_message" />
        </service>
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lichess.synchronizer.soft_timeout">15</parameter>
        <parameter key="lichess.synchronizer.hard_timeout">180</parameter>
        <parameter key="lichess.synchronizer.delay">1</parameter>
    </parameters>

    <services>
        <service id="lichess.synchronizer" class="Bundle\LichessBundle\Chess\Synchronizer">
            <argument type="service" id="lichess.synchronizer.low_level" />
        </service>
        <service id="lichess.synchronizer.low_level" class="Bundle\LichessBundle\Chess\LowLevelSynchronizer" public="false">
            <argument>%lichess.synchronizer.soft_timeout%</argument>
            <argument>%lichess.synchronizer.hard_timeout%</argument>
        </service>
    </services>
</container>

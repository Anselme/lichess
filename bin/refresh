#!/bin/sh

if [ $# -lt 1 ]
then
    echo "usage: refresh [-at]"
    echo "   -a Refresh all"
    echo "   -t Refresh only translations"
    exit 1
fi

while getopts ":at" Option; do
    case $Option in
        a   ) refresh="all";;
        t   ) refresh="trans";;
    esac
done

if [ $refresh == "all" ]; then
    echo "Build bootstrap"
    show_run "vendor/bundles/Sensio/Bundle/DistributionBundle/Resources/bin/build_bootstrap.php"
    show_run "cp app/bootstrap.* xhr/"

    for application in xhr app; do
        echo -e "\n------------------- $application -----------------"
        echo "Warmup $application cache"
        php $application/console -e=prod cache:clear
        echo "Raise $application cache permissions"
        chmod -R 777 $application/cache/prod
    done

    echo "Clear APC cache opcode and user"
    php app/console --env=prod apc:clear

    echo "Dump assets"
    php app/console --env=prod assetic:dump

    echo "Install crafty books"
    bin/install_crafty_books
elif [ $refresh == "trans" ]; then
    echo "Warmup cache"
    php app/console -e=prod cache:clear
    chmod -R 777 app/cache/prod

    echo "Clear APC cache opcode"
    php app/console --env=prod apc:clear --opcode
fi

chmod -R 777 app/cache/prod app/logs
